<?php

define('PAYNL_SOFORTBANKING_METHODID',    559);
define('PAYNL_SOFORTBANKING_NAME',        'Sofortbanking'); // the name of the payment method visible to the end user
define('PAYNL_SOFORTBANKING_METHOD_NAME', 'paynl_sofortbanking'); // name of the folder

require_once __DIR__ . '/../paynl.inc.php';

/*
 * Register this payment methodh
 */
function paynl_sofortbanking_uc_payment_method() {
	global $language;
	$methods[ PAYNL_SOFORTBANKING_METHOD_NAME ] = array(
	    'name' => PAYNL_SOFORTBANKING_NAME, // displayed in the admin
	    'title' => '<img width="25" src="https://static.pay.nl/payment_profiles/100x100/'. PAYNL_SOFORTBANKING_METHODID .'.png"> ' . PAYNL_SOFORTBANKING_NAME, // displayed to the enduser
	    'desc' => 'Betalen met ' . PAYNL_SOFORTBANKING_NAME,
	    'callback' => PAYNL_SOFORTBANKING_METHOD_NAME . '_payment_method',
	    'weight' => 1,
	    'checkout' => true,
	    'no_gateway' => false
		);
	return $methods;
}


/*
 * Set up admin area
 */

function paynl_sofortbanking_payment_method($op, &$order, $form = NULL, &$form_state = NULL){
  global $language;
  
  switch($op)
  {
    case 'cart-details': // for end users
    case 'order-details': // for admins that want to change an order
      return _paynl_show_payment_options($form_state, $order, PAYNL_SOFORTBANKING_METHODID);
      break;
    case 'cart-process': 
      $strMethodSubId = @$form_state['values']['panes']['payment']['details']['methodSubId'];
      if( ! isset($strMethodSubId) || $strMethodSubId === null || ! $strMethodSubId)
      {
        unset( $_SESSION['paynl']['methodSubId'] );
      }
      else
      {
        $_SESSION['paynl']['methodSubId'] = $strMethodSubId;
      }
      break;
    case 'cart-review': break;
    case 'customer-view': break;
    case 'order-delete': break;
    case 'order-details': break;
    case 'order-load': break;
    case 'order-process': break;
    case 'order-save': break;
    case 'order-submit': 
      if ($order->payment_method === PAYNL_SOFORTBANKING_METHOD_NAME) {
        paynl_place_order( $order, PAYNL_SOFORTBANKING_METHODID );
        exit;
      }
      break;
    case 'order-view': break;
    case 'settings': break;
  }
}
